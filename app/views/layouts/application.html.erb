<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <body class="background">
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
          <%= message %>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <div class="container_filler"></div>
    <%= render 'layouts/footer' %>
  </body>
</html>